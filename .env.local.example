# 本地开发配置示例
# 默认推荐 MySQL 主存储；如需本地轻量模式可改为 sqlite
STORAGE_BACKEND=mysql

# ========== 日志配置 ==========
LOG_LEVEL=DEBUG

# ========== CNKI 爬虫配置 ==========
CNKI_THEME=水产养殖
CNKI_PAPERS=5
CNKI_MAX_PAGES=2
CNKI_LOGIN_WAIT_SECONDS=30
CNKI_HEADLESS=0

# ========== 浏览器驱动配置 ==========
EDGE_DRIVER_PATH=
CHROME_DRIVER_PATH=

# ========== 淘宝抓取配置 ==========
TAOBAO_COOKIE=
TAOBAO_KEYWORDS=三文鱼
TAOBAO_PAGES=1
TAOBAO_AUTO_REFRESH_COOKIE=1
TAOBAO_COOKIE_REFRESH_TIMEOUT_SECONDS=180
TAOBAO_COOKIE_REFRESH_USE_SYSTEM_PROFILE=1
