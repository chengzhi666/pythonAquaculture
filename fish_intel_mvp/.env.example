# ========== 数据库配置 ==========
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=change_me
DB_NAME=fish_intel

# ========== 日志配置 ==========
LOG_LEVEL=INFO

# ========== CNKI爬虫配置 ==========
# 搜索主题
CNKI_THEME=aquaculture
# 需要采集的论文数量
CNKI_PAPERS=10
# 最多探索的页数
CNKI_MAX_PAGES=5
# 登录等待时间(秒) - 如需VPN/登录，可增大此值
CNKI_LOGIN_WAIT_SECONDS=20
# 原始HTML最大字符数（超过会截断）
CNKI_RAW_HTML_MAX_CHARS=150000
# 是否无头模式运行（1=是，0=否）
CNKI_HEADLESS=0
# Edge浏览器驱动路径（留空则由Selenium Manager自动寻找）
EDGE_DRIVER_PATH=
# Chrome浏览器驱动路径（备选）
CHROME_DRIVER_PATH=

# ========== 第三方API密钥 ==========
# Taobao采集需要的Cookie（可选）
TAOBAO_COOKIE=
