# ========== 存储后端 ==========
# 默认主存储为 MySQL；如需本地测试可设为 sqlite
STORAGE_BACKEND=mysql

# ========== 数据库配置 ==========
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=change_me
DB_NAME=fish_intel

# ========== 日志配置 ==========
LOG_LEVEL=INFO

# ========== CNKI爬虫配置 ==========
# 搜索主题
CNKI_THEME=aquaculture
# 需要采集的论文数量
CNKI_PAPERS=10
# 最多探索的页数
CNKI_MAX_PAGES=5
# 登录等待时间(秒) - 如需VPN/登录，可增大此值
CNKI_LOGIN_WAIT_SECONDS=20
# 原始HTML最大字符数（超过会截断）
CNKI_RAW_HTML_MAX_CHARS=150000
# 是否无头模式运行（1=是，0=否）
CNKI_HEADLESS=0
# Edge浏览器驱动路径（留空则由Selenium Manager自动寻找）
EDGE_DRIVER_PATH=
# Chrome浏览器驱动路径（备选）
CHROME_DRIVER_PATH=

# ========== 第三方API密钥 ==========
# Taobao采集需要的Cookie（可选）
TAOBAO_COOKIE=
# 关键词列表，多个关键词用英文逗号分隔
TAOBAO_KEYWORDS=三文鱼
# 每个关键词抓取页数
TAOBAO_PAGES=1
# 每页商品数（建议 <= 50）
TAOBAO_PAGE_SIZE=50
# 本次任务最多入库条数
TAOBAO_MAX_ITEMS=500
# 页面间隔秒数，避免触发风控
TAOBAO_SLEEP_SECONDS=1.0
# 请求超时（秒）
TAOBAO_TIMEOUT_SECONDS=20
# 自动拉起浏览器刷新 cookie（1=开启，0=关闭）
TAOBAO_AUTO_REFRESH_COOKIE=1
# 刷新 cookie 时等待人工登录的超时（秒）
TAOBAO_COOKIE_REFRESH_TIMEOUT_SECONDS=180
# 刷新 cookie 的轮询间隔（秒）
TAOBAO_COOKIE_REFRESH_POLL_SECONDS=1.0
# 刷新 cookie 时默认打开的页面
TAOBAO_COOKIE_REFRESH_START_URL=https://login.taobao.com/member/login.jhtml
# 刷新时是否复用系统浏览器用户数据（推荐 1）
TAOBAO_COOKIE_REFRESH_USE_SYSTEM_PROFILE=1
# 可选：指定浏览器 profile 名称（如 Default）
TAOBAO_COOKIE_REFRESH_PROFILE=
# 可选：指定浏览器用户数据目录
TAOBAO_COOKIE_REFRESH_USER_DATA_PATH=
# 可选：降低自动化特征（部分浏览器会提示不支持该参数）
TAOBAO_COOKIE_REFRESH_STEALTH=0

# ========== Salmon 专项任务 ==========
# 支持的平台: taobao,jd
SALMON_PLATFORMS=taobao,jd
# Salmon 通用关键词（当平台专属关键词未配置时使用）
SALMON_KEYWORDS=虹鳟,帝王鲑,帝王三文鱼,rainbow,king salmon
# 平台专属关键词（留空则走 SALMON_KEYWORDS 或 DB 词典）
TAOBAO_SALMON_KEYWORDS=
JD_SALMON_KEYWORDS=
# 平台专属抓取页数
TAOBAO_SALMON_PAGES=1
JD_SALMON_PAGES=1
